  <script src="https://unpkg.com/alpinejs" defer></script>
</head>
<body class="flex flex-col items-center justify-center min-h-screen p-6">
  <div class="w-full max-w-xl bg-gray-800 p-6 rounded-2xl shadow-lg animate-fade-in" x-data="keySearchApp()">
    <h1 class="text-2xl font-bold mb-4 text-center">üîç –ü–æ–∏—Å–∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã—Ö –∫–ª—é—á–µ–π</h1>

    <div class="mb-4">
      <label class="block text-sm font-medium mb-1">–ê–¥—Ä–µ—Å</label>
      <input type="text" x-model="target" class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-600 focus:outline-none focus:ring focus:ring-indigo-500">
    </div>

    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <label class="block text-sm font-medium mb-1">–°—Ç–∞—Ä—Ç</label>
        <input type="text" x-model="start" class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-600">
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">–§–∏–Ω–∏—à</label>
        <input type="text" x-model="end" class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-600">
      </div>
    </div>

    <div class="mb-4">
      <label class="block text-sm font-medium mb-1">–†–µ–∂–∏–º</label>
      <select x-model="mode" class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-600">
        <option value="sequential">–ü–æ—Å–ª–µ–¥–æ–≤–∞—Ç–µ–ª—å–Ω—ã–π</option>
        <option value="random">–°–ª—É—á–∞–π–Ω—ã–π</option>
      </select>
    </div>

    <div class="mb-6 text-center space-x-2">
      <button @click="startSearch" class="px-4 py-2 bg-green-600 hover:bg-green-700 rounded shadow">–°—Ç–∞—Ä—Ç</button>
      <button @click="pauseSearch" class="px-4 py-2 bg-yellow-500 hover:bg-yellow-600 rounded shadow">–ü–∞—É–∑–∞</button>
      <button @click="resumeSearch" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 rounded shadow">–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å</button>
      <button @click="stopSearch" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded shadow">–°—Ç–æ–ø</button>
    </div>

    <div class="bg-gray-700 rounded p-3 h-64 overflow-auto text-sm">
      <template x-for="line in log" :key="line">
        <div x-text="line"></div>
      </template>
    </div>
  </div>

  <script>
    function keySearchApp() {
      return {
        target: '',
        start: '',
        end: '',
        mode: 'sequential',
        log: [],

        startSearch() {
          fetch('/start', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              target_address: this.target,
              start_hex: this.start,
              end_hex: this.end,
              mode: this.mode
            })
          }).then(res => res.json()).then(data => this.log.unshift('‚ñ∂ ' + data.message))
        },

        pauseSearch() {
          fetch('/pause').then(res => res.json()).then(data => this.log.unshift('‚è∏ ' + data.message))
        },

        resumeSearch() {
          fetch('/resume').then(res => res.json()).then(data => this.log.unshift('‚ñ∂ ' + data.message))
        },

        stopSearch() {
          fetch('/stop').then(res => res.json()).then(data => this.log.unshift('‚èπ ' + data.message))
        }
      }
    }
  </script>
  <style>
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fade-in 0.5s ease-out;
    }
  </style>
